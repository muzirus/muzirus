{% extends 'admin/layout.html.twig' %}
{% import 'admin/_macros/buttons.html.twig' as buttons %}

{% block title 'Česká slova' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="box">
        {{ form_start(form) }}
        <div class="box-header with-border">
            Edit
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="form-control" disabled="true">{{ translation.czechWord.content }}</div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        {{ form_widget(form.czechWordNote) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="form-control" disabled="true">{{ translation.russianWord.content }}</div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        {{ form_widget(form.russianWordNote) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-primary">
                Save
            </button>
            <a href="{{ path('admin.czech-word.translations', { 'id': word.id }) }}"
               class="btn btn-default">
                Back to list
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
