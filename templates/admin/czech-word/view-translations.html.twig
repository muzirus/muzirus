{% extends 'admin/layout.html.twig' %}
{% import 'admin/_macros/buttons.html.twig' as buttons %}

{% block title 'Česká slova' %}

{% block content %}
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs clearfix">
            <li>
                <a href="{{ path('admin.czech-word.edit', {id: word.id}) }}">
                    Edit
                </a>
            </li>
            <li class="active">
                <a href="{{ path('admin.czech-word.view-translations', {id: word.id}) }}">
                    Exemplifications
                </a>
            </li>
            <li class="pull-right">
                <div class="btn-group">
                    {% if wordPrev is not null %}
                        {{ buttons.wordPrev(wordPrev.content, path('admin.czech-word.view-translations', {id: wordPrev.id})) }}
                    {% endif %}
                    {% if wordNext is not null %}
                        {{ buttons.wordNext(wordNext.content, path('admin.czech-word.view-translations', {id: wordNext.id})) }}
                    {% endif %}
                </div>
            </li>
        </ul>
        <div class="box no-border">
            <div class="box-body">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Translation</th>
                        <th>Czech word</th>
                        <th>Russian word</th>
                        <th>Examples</th>
                        <th>Note RU</th>
                        <th>Note CS</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for translation in word.translations %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.translation.view', {id: translation.id}) }}">
                                    {{ translation.czechWord.content }}
                                    -
                                    {{ translation.russianWord.content }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin.czech-word.edit', {id: translation.czechWord.id}) }}">
                                    {{ translation.czechWord.content }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin.russian-word.edit', {id: translation.russianWord.id}) }}">
                                    {{ translation.russianWord.content }}
                                </a>
                            </td>
                            <td>
                                {{ translation.examplesCount }}
                            </td>
                            <td>
                                {{ translation.russianWordNote }}
                            </td>
                            <td>
                                {{ translation.czechWordNote }}
                            </td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a href="#" class="btn btn-primary">
                                        Edit
                                    </a>
                                    <a href="#" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                                        Remove
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Translation</th>
                        <th>Czech word</th>
                        <th>Russian word</th>
                        <th>Examples</th>
                        <th>Note RU</th>
                        <th>Note CS</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
