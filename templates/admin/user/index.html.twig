{% extends 'admin/layout.html.twig' %}

{% block title 'admin.users'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.name'|trans }}</th>
                        <th>{{ 'admin.email'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.name'|trans }}</th>
                        <th>{{ 'admin.email'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="#" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_user'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
