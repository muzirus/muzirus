{% extends 'admin/layout.html.twig' %}

{% block title 'admin.dashboard'|trans %}

{% block content %}
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua"><i class="fa fa-book"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">{{ 'admin.czech_words'|trans }}</span>
                    <span class="info-box-number">{{ count_czech_words() }}</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-red"><i class="fa fa-book"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">{{ 'admin.russian_words'|trans }}</span>
                    <span class="info-box-number">{{ count_russian_words() }}</span>
                </div>
            </div>
        </div>

        <div class="clearfix visible-sm-block"></div>

        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-green"><i class="fa fa-book"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">{{ 'admin.equivalents'|trans }}</span>
                    <span class="info-box-number">{{ count_translations() }}</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-yellow"><i class="fa fa-book"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">{{ 'admin.exemplifications'|trans }}</span>
                    <span class="info-box-number">{{ count_translation_examples() }}</span>
                </div>
            </div>
        </div>
    </div>

    <!-- todo: add some content -->

    <div class="box box-default">
        <div class="box-header with-border">
            <i class="fa fa-bullhorn"></i>
            <h3 class="box-title">{{ 'admin.news'|trans }}</h3>
        </div>
        <div class="box-body">
            {{ 'admin.no_news_yet'|trans }}
        </div>
    </div>
{% endblock %}
