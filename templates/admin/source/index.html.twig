{% extends 'admin/layout.html.twig' %}

{% block title 'Zdroje' %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Authors</th>
                    <th>Publisher</th>
                    <th>Published Place</th>
                    <th>Published Date</th>
                    <th>Pages count</th>
                </tr>
                </thead>
                <tbody>
                {% for source in sources %}
                    <tr>
                        <td>
                            <a href="{{ path('admin.source.edit', {id: source.id}) }}">
                                {{ source.title }}
                            </a>
                        </td>
                        <td>{{ source.type.title }}</td>
                        <td>{{ source.nameOfAuthor }}</td>
                        <td>{{ source.nameOfPublisher }}</td>
                        <td>{{ source.placeOfRelease }}</td>
                        <td>{{ source.dateOfRelease }}</td>
                        <td>{{ source.pagesCount }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Authors</th>
                    <th>Publisher</th>
                    <th>Published Place</th>
                    <th>Published Date</th>
                    <th>Pages count</th>
                </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.source.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> Add source
            </a>
        </div>
    </div>
{% endblock %}
