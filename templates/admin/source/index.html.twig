{% extends 'admin/layout.html.twig' %}

{% block title 'admin.sources'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.type'|trans }}</th>
                        <th>{{ 'admin.authors'|trans }}</th>
                        <th>{{ 'admin.publisher'|trans }}</th>
                        <th>{{ 'admin.published_place'|trans }}</th>
                        <th>{{ 'admin.published_date'|trans }}</th>
                        <th>{{ 'admin.pages_count'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for source in sources %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.source.edit', {id: source.id}) }}">
                                    {{ source.title }}
                                </a>
                            </td>
                            <td>{{ source.type.title }}</td>
                            <td>{{ source.nameOfAuthor }}</td>
                            <td>{{ source.nameOfPublisher }}</td>
                            <td>{{ source.placeOfRelease }}</td>
                            <td>{{ source.dateOfRelease }}</td>
                            <td>{{ source.pagesCount }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.type'|trans }}</th>
                        <th>{{ 'admin.authors'|trans }}</th>
                        <th>{{ 'admin.publisher'|trans }}</th>
                        <th>{{ 'admin.published_place'|trans }}</th>
                        <th>{{ 'admin.published_date'|trans }}</th>
                        <th>{{ 'admin.pages_count'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.source.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_source'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
