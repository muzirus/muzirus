{% extends 'admin/layout.html.twig' %}

{% block title 'admin.symbols'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.value'|trans }}</th>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.description'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for symbol in symbols %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.symbol.edit', {id: symbol.id}) }}">
                                    {{ symbol.content }}
                                </a>
                            </td>
                            <td>{{ symbol.title }}</td>
                            <td>{{ symbol.description }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.value'|trans }}</th>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.description'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.symbol.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_symbol'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
