{% extends 'admin/layout.html.twig' %}

{% block title 'admin.posts'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.slug'|trans }}</th>
                        <th>{{ 'admin.created'|trans }}</th>
                        <th>{{ 'admin.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.post.view', {id: post.id}) }}">
                                    {{ post.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app.page', {slug: post.slug}) }}" target="_blank">
                                    {{ post.slug }}
                                    <sup><i class="fa fa-external-link"></i></sup>
                                </a>
                            </td>
                            <td class="text-nowrap">
                                {{ post.createdAtFormat }}
                            </td>
                            <td>
                                <a href="{{ path('admin.post.edit', {id: post.id}) }}" class="btn btn-primary btn-xs">
                                    {{ 'admin.button.edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.slug'|trans }}</th>
                        <th>{{ 'admin.created'|trans }}</th>
                        <th>{{ 'admin.actions'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.post.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_post'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
