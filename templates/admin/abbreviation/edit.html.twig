{% extends 'admin/layout.html.twig' %}

{% import 'admin/_macros/modals.html.twig' as modals %}

{% block title 'admin.abbreviations'|trans %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="box">
        {{ form_start(form) }}
        <div class="box-header with-border">
            <h3 class="box-title">
                {{ 'admin.box.title.edit'|trans }}
            </h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content) }}
                {{ form_errors(form.content) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="box-footer clearfix">
            <div class="pull-left">
                <button class="btn btn-primary">
                    {{ 'admin.button.save'|trans }}
                </button>
                <a href="{{ path('admin.abbreviation') }}" class="btn btn-default">
                    {{ 'admin.button.back_to_list'|trans }}
                </a>
            </div>
            <div class="pull-right">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#js-modal-remove">
                    {{ 'admin.button.remove'|trans }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    {{ modals.removeModal(
        path('admin.abbreviation.remove', {id: abbreviation.id}),
        'Do you really want to remove this abbreviation?'
    ) }}
{% endblock %}
