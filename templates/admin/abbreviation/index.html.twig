{% extends 'admin/layout.html.twig' %}

{% block title 'admin.abbreviations'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                <tr>
                    <th>{{ 'admin.value'|trans }}</th>
                    <th>{{ 'admin.title'|trans }}</th>
                    <th>{{ 'admin.description'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for abbreviation in abbreviations %}
                    <tr>
                        <td>
                            <a href="{{ path('admin.abbreviation.edit', {id: abbreviation.id}) }}">
                                {{ abbreviation.content }}
                            </a>
                        </td>
                        <td>{{ abbreviation.title }}</td>
                        <td>{{ abbreviation.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>{{ 'admin.value'|trans }}</th>
                    <th>{{ 'admin.title'|trans }}</th>
                    <th>{{ 'admin.description'|trans }}</th>
                </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.abbreviation.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_abbreviation'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
