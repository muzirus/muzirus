{% extends 'admin/layout.html.twig' %}

{% block title 'admin.announcements'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.author'|trans }}</th>
                        <th>{{ 'admin.created'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for announcement in announcements %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.announcement.edit', {id: announcement.id}) }}">
                                    {{ announcement.title }}
                                </a>
                            </td>
                            <td>
                                {% if announcement.hasAuthor() %}
                                    {{ announcement.author.name }}
                                {% else %}
                                    Anon.
                                {% endif %}
                            </td>
                            <td>
                                {{ announcement.createdAt|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.author'|trans }}</th>
                        <th>{{ 'admin.created'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.announcement.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_announcement'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
