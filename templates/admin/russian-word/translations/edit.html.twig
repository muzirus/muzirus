{% extends 'admin/layout.html.twig' %}
{% import 'admin/_macros/modals.html.twig' as modals %}

{% block title 'admin.russian_words'|trans %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="box">
        {{ form_start(form) }}
        <div class="box-header with-border">
            <h3 class="box-title">
                {{ 'admin.box.title.edit'|trans }}
            </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-control" disabled="true">{{ translation.czechWord.content }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.czechWordNote) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-control" disabled="true">{{ translation.russianWord.content }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.russianWordNote) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer clearfix">
            <div class="pull-left">
                <button class="btn btn-primary">
                    {{ 'admin.button.save'|trans }}
                </button>
                <a href="{{ path('admin.russian-word.translations', { 'id': word.id }) }}"
                   class="btn btn-default">
                    {{ 'admin.button.back_to_list'|trans }}
                </a>
            </div>
            <div class="pull-right">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#js-modal-remove">
                    {{ 'admin.button.remove'|trans }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    {{ modals.removeModal(
        path('admin.russian-word.translations.remove', {
            id: word.id,
            translationId: translation.id
        }),
        'Do you really want to remove this translation?'
    ) }}
{% endblock %}
