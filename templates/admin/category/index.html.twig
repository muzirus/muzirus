{% extends 'admin/layout.html.twig' %}

{% block title 'admin.topics'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.title_in_russian'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.category.edit', {id: category.id}) }}">
                                    {{ category.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin.category.edit', {id: category.id}) }}">
                                    {{ category.titleInRussian }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.title'|trans }}</th>
                        <th>{{ 'admin.title_in_russian'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="box-footer">
            <a href="{{ path('admin.category.add') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{ 'admin.button.add_category'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
