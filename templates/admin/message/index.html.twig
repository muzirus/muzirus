{% extends 'admin/layout.html.twig' %}

{% block title 'admin.messages'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.created'|trans }}</th>
                        <th>{{ 'admin.content'|trans }}</th>
                        <th>{{ 'admin.email'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <a href="{{ path('admin.message.view', {id: message.id}) }}">
                                    {{ message.content }}
                                </a>
                            </td>
                            <td>{{ message.email }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.created'|trans }}</th>
                        <th>{{ 'admin.content'|trans }}</th>
                        <th>{{ 'admin.email'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
