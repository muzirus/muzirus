{% extends 'admin/layout.html.twig' %}

{% block title 'admin.translation_examples'|trans %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-striped table-hover js-data-table">
                <thead>
                    <tr>
                        <th>{{ 'admin.russian'|trans }}</th>
                        <th>{{ 'admin.czech'|trans }}</th>
                        <th>{{ 'admin.examples'|trans }}</th>
                        <th>{{ 'admin.russian_note'|trans }}</th>
                        <th>{{ 'admin.czech_note'|trans }}</th>
                        <th>{{ 'admin.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for translation in translations %}
                        <tr>
                            <td>
                                <a href="{{ path('admin.russian-word.edit', {id: translation.russianWord.id}) }}">
                                    {{ translation.russianWord.content }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin.czech-word.edit', {id: translation.czechWord.id}) }}">
                                    {{ translation.czechWord.content }}
                                </a>
                            <td>
                                <span class="label label-default">{{ translation.examplesCount }}</span>
                            </td>
                            <td>
                                {{ translation.russianWordNote }}
                            </td>
                            <td>
                                {{ translation.czechWordNote }}
                            </td>
                            <td>
                                <a href="{{ path('admin.translation.edit', {id: translation.id}) }}"
                                   class="btn btn-primary btn-xs">
                                    {{ 'admin.button.edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>{{ 'admin.russian'|trans }}</th>
                        <th>{{ 'admin.czech'|trans }}</th>
                        <th>{{ 'admin.examples'|trans }}</th>
                        <th>{{ 'admin.russian_note'|trans }}</th>
                        <th>{{ 'admin.czech_note'|trans }}</th>
                        <th>{{ 'admin.actions'|trans }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
