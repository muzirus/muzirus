{% extends 'app/layout.html.twig' %}

{% block heading 'app.title.feedback'|trans %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-8 offset-md-2">
            {% include 'app/_fragments/_flash_messages.html.twig' %}
            <p>
                {{ 'app.feedback_intro'|trans }} <strong>{{ 'app.write_us'|trans }}</strong>
            </p>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content) }}
                <div class="form-text text-muted">
                    {{ 'app.feedback.content.help_text'|trans }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="form-text text-muted">
                    {{ 'app.feedback.email.help_text'|trans }}
                </div>
            </div>
            <p>
                {{ 'app.thank_you'|trans }}
            </p>
            <button class="btn btn-primary">
                <i class="fa fa-paper-plane"></i>
                {{ 'app.button.send'|trans }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
