{% extends 'app/layout.html.twig' %}

{% block heading %}
    {% if app.request.locale == 'ru' %}
        {{ post.titleInRussian }}
    {% else %}
        {{ post.title }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if app.request.locale == 'ru' %}
        {{ post.contentInRussian|md2html }}
    {% else %}
        {{ post.content|md2html }}
    {% endif %}
{% endblock %}
