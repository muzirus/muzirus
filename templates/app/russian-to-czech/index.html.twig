{% extends 'app/layout.html.twig' %}
{% import 'app/_macros/filter.html.twig' as filter %}

{% block heading 'app.title.vocabulary_russian'|trans %}

{% block content %}

    <div class="text-center">
        {{ filter.links('app.russian_to_czech', letters) }}
    </div>

    {% for word in words %}
        <h3>
            <a href="{{ path('app.russian_to_czech.detail', { id: word.id }) }}">{{ word }}</a>
        </h3>
        <hr>
    {% endfor %}
{% endblock %}
