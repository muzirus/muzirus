{% macro listOfWords(words) %}
    {% for wordsInRow in words|batch(12) %}
        <div class="row">
            {% for word in wordsInRow %}
                <div class="col-lg-4 col-md-6">
                    <h3>
                        {% if word is instanceOf('\\App\\Entity\\RussianWordInterface') %}
                            <a href="{{ path('app.russian_to_czech.detail', { id: word.id }) }}">{{ word }}</a>
                        {% else %}
                            <a href="{{ path('app.czech_to_russian.detail', { id: word.id }) }}">{{ word }}</a>
                        {% endif %}
                    </h3>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endmacro %}
