{
    "name": "muzirus/muzirus",
    "description": "Source code of dictionary Muzirus.cz",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Matus Petrofcik",
            "email": "matus@petrofcik.eu",
            "homepage": "https://www.petrofcik.eu",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "cocur/slugify": "^3.1",
        "erusev/parsedown": "^1.7",
        "ezyang/htmlpurifier": "^4.10",
        "mockery/mockery": "^1.0",
        "sensio/framework-extra-bundle": "^5.1",
        "sensiolabs/security-checker": "^4.1",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/debug-pack": "*",
        "symfony/expression-language": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "^1.0",
        "symfony/process": "^4.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/translation": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/web-link": "^4.0",
        "symfony/webpack-encore-pack": "*",
        "symfony/yaml": "^4.0",
        "webmozart/assert": "^1.3",
        "white-october/pagerfanta-bundle": "^1.1"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*",
        "lmc/coding-standard": "^1.1",
        "phpstan/phpstan": "^0.9.2",
        "symfony/browser-kit": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/profiler-pack": "*",
        "symfony/web-server-bundle": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "cache:warmup": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "prod": [
            "@composer install --no-dev --optimize-autoloader"
        ],
        "dev": [
            "@composer install"
        ],
        "compile": [
            "@php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration"
        ],
        "cs": [
            "@php vendor/bin/ecs check src/ tests/ --ansi"
        ],
        "cs-fix": [
            "@php vendor/bin/ecs check src/ tests/ --ansi --fix"
        ],
        "phpunit": "@php vendor/bin/simple-phpunit",
        "analyze": [
            "@composer cs",
            "@composer phpunit",
            "@php bin/console lint:yaml config",
            "@php bin/console lint:twig templates"
        ],
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon -l 7 src",
        "lock": "@composer update --lock"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01C5H95BKEGJF8VQ5H9F02MXM5",
            "allow-contrib": false
        }
    }
}
